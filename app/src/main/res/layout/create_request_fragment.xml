<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="15dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="#3f23f4"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/spinner_city"
        android:layout_width="match_parent"
        android:textSize="22sp"
        android:text="Bengaluru"
        android:textColor="@android:color/background_dark"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#080808">
    </View>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pincode_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_pincode"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>
    \

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Service"
        android:textColor="#2431a4"
        android:textSize="13sp"/>

    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinner_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#080808">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/contract_button"
            android:layout_width="0dp"
            android:background="@drawable/button_blue_background"
            android:textColor="#ffff"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contract"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4">
        </Space>

        <Button
            android:id="@+id/labor_button"
            android:layout_width="0dp"
            android:background="@drawable/button_background_gray"
            android:textColor="#7c7a7a"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Labor"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4">
        </Space>
        <Button
            android:id="@+id/both_button"
            android:layout_width="0dp"
            android:background="@drawable/button_background_gray"
            android:textColor="#7c7a7a"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Both"
            android:textAllCaps="false"/>
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_work_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Work description"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/create_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_background"
        android:text="Create Request"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp">
    </Button>
</LinearLayout>